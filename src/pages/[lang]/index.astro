---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroSection from "../../components/sections/HeroSection.astro";
import EventList from "../../components/sections/EventList.astro";
import SermonList from "../../components/sections/SermonList.astro";
import Button from "../../components/ui/Button.astro";

import { LOCALES, useTranslations, type Lang } from "../../i18n";

const t = useTranslations(Astro.currentLocale as Lang);
import { getRelativeLocaleUrl } from "astro:i18n";

const locale = Astro.currentLocale as Lang;

export const getStaticPaths = () =>
  Object.keys(LOCALES).map((lang) => ({
    params: { lang },
  }));
---

<BaseLayout
  title="Homepage - Latin Ageing UK"
  description="Latin Ageing UK is dedicated to empowering people aged 50 and over from the Latin American and Spanish-speaking communities in the London Borough of Southwark."
>
  <HeroSection
    title="Latin Ageing UK CIC"
    subtitle={t({
      en: "Join us in rediscovering joy and vitality in every moment!",
      es: "¡Únase a nosotros para redescubrir la alegría y la vitalidad en cada momento!",
    })}
    backgroundImage="/uploads/hero/dance-yellow.jpg"
    ctaText={t({
      en: "Get in touch",
      es: "Ponte en contacto con nosotros",
    })}
    ctaLink="/im-new"
    secondaryCtaText="Read Blog"
    secondaryCtaLink="/sermons"
  />

  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-8">
          {
            t({
              en: "Healthwatch Southwark: 1 Year Update",
              es: "Healthwatch Southwark: Actualización de 1 año",
            })
          }
        </h2>
        <p class="text-xl text-gray-600 max-w-8xl mx-auto mb-6">
          {
            t({
              en: "Over the past year, Patricia Cuenca has been proud to work alongside Healthwatch Southwark as Community Health Ambassador and Founder of Latin Ageing UK. Together, we launched an important research report: Access to Health and Social Care for Latin American Communities in Southwark.",
              es: "Durante el último año, Patricia Cuenca se enorgulleció de trabajar junto a Healthwatch Southwark como Embajadora de Salud Comunitaria y fundadora de Latin Ageing UK. Juntos, lanzamos un importante informe de investigación: Acceso a la atención sanitaria y social para las comunidades latinoamericanas en Southwark.",
            })
          }
        </p>

        <p class="text-xl text-gray-600 max-w-8xl mx-auto mb-8">
          {
            t({
              en: "As someone deeply embedded in the Latin American community, I know firsthand how our voices have too often been left out of conversations about health inequalities. This project emerged precisely because we recognised this gap and wanted to ensure that the needs and experiences of Latin Americans in Southwark are finally acknowledged and addressed by our health and social care services.",
              es: "Como alguien profundamente arraigado en la comunidad latinoamericana, sé de primera mano cómo nuestras voces, con demasiada frecuencia, se han quedado al margen de las conversaciones sobre las desigualdades en salud. Este proyecto surgió precisamente porque reconocimos esta brecha y queríamos asegurar que las necesidades y experiencias de los latinoamericanos en Southwark fueran finalmente reconocidas y atendidas por nuestros servicios de salud y asistencia social.",
            })
          }
        </p>

        <!-- <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Morning Service</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">8:00 AM</p>
            <p class="text-gray-600 mb-4">Traditional service with hymns and choir</p>
            <p class="italic text-gray-500">In-person & Livestream</p>
          </div>
          
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Family Service</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">10:30 AM</p>
            <p class="text-gray-600 mb-4">Contemporary worship with children's ministry</p>
            <p class="italic text-gray-500">In-person only</p>
          </div>
        </div> -->

        <Button
          href="https://www.healthwatchsouthwark.org/news/2024-10-02/1-year-update-our-latin-american-access-report"
          variant="outline"
          >{
            t({
              en: "Read The Report",
              es: "Leer El Informe",
            })
          }
        </Button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="flex justify-center">
          <img
            src="/uploads/hero/group.jpg"
            alt="Our Church"
            class="rounded-lg shadow-lg object-cover h-full max-h-90"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            {
              t({
                en: "About us",
                es: "Sobre nosotros",
              })
            }
          </h2>
          <p class="text-gray-700 mb-6 text-lg">
            {
              t({
                en: "Latin Ageing UK is dedicated to empowering people aged 50 and over from the Latin American and Spanish-speaking communities in the London Borough of Southwark.",
                es: "Latin Ageing UK se dedica a empoderar a personas de 50 años o más de las comunidades latinoamericana e hispanohablante del distrito londinense de Southwark.",
              })
            }
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            {
              t({
                en: "Our charity offers a vibrant range of cultural, social, and  educational activities designed to boost wellbeing, combat loneliness, and enhance quality of life for older adults.",
                es: "Nuestra organización benéfica ofrece una vibrante gama de actividades culturales, sociales y educativas diseñadas para impulsar el bienestar, combatir la soledad y mejorar la calidad de vida de los adultos mayores.",
              })
            }
          </p>

          <Button
            href={t({
              en: "/en/about-us",
              es: "/es/about-us",
            })}
          >
            {
              t({
                en: "Learn More About Us ",
                es: "Más información sobre nosotros",
              })
            }
          </Button>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
